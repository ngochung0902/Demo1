<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:id="@+id/img_branchs"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/img_car"
        android:layout_margin="10dp"
        />

    <TextView
        android:layout_margin="10dp"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tv_to"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/img_branchs" />

    <TextView
        android:textSize="15dp"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tv_nho"
        android:layout_alignBottom="@+id/img_branchs"
        android:layout_toEndOf="@+id/img_branchs" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageView3"
        android:background="@drawable/img_arrowright2"
        android:layout_above="@+id/tv_nho"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
