<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.company.qts.demo1.ActProduct">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/relativeLayout3">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/img_arrow"
            android:layout_margin="5dp"
            android:id="@+id/img_arrow" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_logo1"
            android:layout_alignTop="@+id/img_arrow"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relativeLayout3">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:src="@drawable/line"
            android:id="@+id/imageView7"
            android:layout_marginTop="20dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Products"
            android:textSize="18dp"
            android:id="@+id/textView7"
            android:layout_below="@+id/imageView7"
            android:layout_centerHorizontal="true" />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:src="@drawable/line"
            android:layout_below="@+id/textView7"
            android:layout_alignStart="@+id/imageView7"
            android:id="@+id/imageView8" />

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rcv_products"
                android:numColumns="4"
                android:orientation="horizontal"
                android:layout_below="@+id/imageView8"
                android:layout_alignParentStart="true"
                android:layout_marginTop="39dp">
            </android.support.v7.widget.RecyclerView>
    </RelativeLayout>
</RelativeLayout>
