<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.company.qts.demo1.ActNewUser2"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:background="@drawable/topandbot">
        <ImageView
            android:id="@+id/bt_arrow2"
            android:layout_gravity="center"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/img_arrow"/>
        <TextView
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/registeruser"
            android:textSize="30dp"
            android:textColor="#ffff"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/favouvite"
            android:textColor="@color/edtRegister"
            android:background="@drawable/edt_register"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:textSize="20dp"/>

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:id="@+id/img_avatar"
                android:layout_gravity="center"
                android:background="@drawable/im_avatar"
                android:layout_marginTop="15dp"/>

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="276dp"
                android:layout_height="wrap_content"
                android:id="@+id/pb_loadhome"
                android:layout_gravity="center_horizontal"
                android:max="200" />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4">
        <Button
            android:id="@+id/bt_submit1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/topandbot"
            android:text="submit"
            android:textColor="#054515"
            android:textSize="30dp"/>
    </LinearLayout>
</LinearLayout>
