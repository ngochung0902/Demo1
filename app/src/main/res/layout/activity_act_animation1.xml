<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#63c664"
    tools:context="com.company.qts.demo1.ActAnimation1">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity 1"
        android:id="@+id/bt_animation1"
        android:layout_marginTop="144dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rotate + Alpha + Scale"
        android:id="@+id/bt_anmtalpha"
        android:layout_below="@+id/bt_anmttranslate"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Translate"
        android:id="@+id/bt_anmttranslate"
        android:layout_alignTop="@+id/bt_anmtlistview"
        android:layout_toStartOf="@+id/bt_anmtlistview" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List View"
        android:id="@+id/bt_anmtlistview"
        android:layout_below="@+id/bt_animation1"
        android:layout_alignStart="@+id/bt_animation1"
        android:layout_marginTop="78dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menu Animation"
        android:id="@+id/bt_anmtmenu"
        android:layout_alignTop="@+id/bt_anmtlistview"
        android:layout_toEndOf="@+id/bt_anmtlistview" />
</RelativeLayout>
