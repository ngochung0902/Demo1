<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.company.qts.demo1.ActPicasso">
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/img_picasso"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="186dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="drawable"
                android:id="@+id/bt_drawable" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="targets"
                android:id="@+id/bt_targets"
                android:layout_alignTop="@+id/bt_scale"
                android:layout_alignParentEnd="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="scale"
                android:id="@+id/bt_scale"
                android:layout_alignTop="@+id/bt_rotate"
                android:layout_centerHorizontal="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="rotate"
                android:id="@+id/bt_rotate"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="resize"
                android:id="@+id/bt_resize"
                android:layout_alignTop="@+id/bt_callback"
                android:layout_alignParentEnd="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Callback"
                android:id="@+id/bt_callback"
                android:layout_alignTop="@+id/bt_error"
                android:layout_centerHorizontal="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="error"
                android:id="@+id/bt_error"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Url"
                android:id="@+id/bt_url"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="placeholder"
                android:id="@+id/bt_placeholder"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
